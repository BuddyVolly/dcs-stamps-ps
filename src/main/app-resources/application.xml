<?xml version="1.0" encoding="us-ascii"?>
<application xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" id="stamps-ps">
  <jobTemplates>
	<jobTemplate id="premaster_prep">
      <streamingExecutable>/application/preprocess/run_preprocess.sh</streamingExecutable>
 	<defaultParameters>
        <parameter id="orbit" title="Orbits files: for Envisat DOR or ODR, ERS ODR" abstract="Orbits files" scope="runtime">VOR</parameter>
        <parameter id="master" title="master product reference" abstract="Define the master product reference" scope="runtime">http://eo-virtual-archive4.esa.int/search/ASA_IM__0P/ASA_IM__0CNPAM20110719_090401_000000163104_00352_49073_1934.N1/rdf</parameter>
      </defaultParameters>
      <defaultJobconf>
      	<property id="ciop.job.max.tasks">1</property>
        <property id="mapred.task.timeout">9900000000</property>
    </defaultJobconf>
    </jobTemplate>
    <jobTemplate id="preprocess">
      <streamingExecutable>/application/preprocess/run_preprocess.sh</streamingExecutable>
 	<defaultParameters>
	  <parameter id="orbit" title="Orbits files: for Envisat DOR or ODR, ERS ODR" abstract="Orbits files" scope="runtime">VOR</parameter>
	</defaultParameters>
        <defaultJobconf>
          <property id="mapred.task.timeout">9900000000</property>
        </defaultJobconf>
    </jobTemplate>
    <jobTemplate id="master_prep">
      <streamingExecutable>/application/master_prep/run_master_prep.sh</streamingExecutable>
        <defaultJobconf>
        <property id="mapred.task.timeout">9900000000</property>
        </defaultJobconf>
    </jobTemplate>
  </jobTemplates>
  <workflow id="dcs-stamps-ps" title="StaMPS" abstract="StaMPS">
    <workflowVersion>1.0</workflowVersion>
      <node id="node_preprocess">
        <job id="preprocess" />
          <sources>
          <source scope="runtime" id="slave" title="Slave product reference" abstract="Define the slave product reference to use with ADORE" refid="file:urls">/application/inputs/input.list</source>
          </sources>
          <parameters/>
      </node>
      <node id="node_master_prep">
        <job id="master_prep" />
          <parameters/>
      </node>
   </workflow>
</application>
